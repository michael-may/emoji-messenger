{
  "name": "emoji-messenger",
  "description": "Send and receive encrypted messages.",
  "version": "0.9.0",
  "author": "Michael May",
  "scripts": {
    "ng": "ng",
    "config": "ts-node src/environments/set-env",
    "parseEmojiList": "ts-node tools/emoji-parser",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "start": "node server.js",
    "start:dev": "npm run config && npm run helpers && ng serve --disable-host-check",
    "build": "npm run config && npm run helpers && ng build --configuration production --aot --build-optimizer=false",
    "build:pages": "npm run build -- --base-href=/emoji-messenger/ && rm -rf docs && cp -r www docs && cp docs/index.html docs/404.html",
    "test": "npm run config && npm run helpers && ng test",
    "build:dev": "npm run config && npm run helpers && ng build",
    "helpers": "node ./helpers/write-version.js",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "ngcc"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "~13.1.1",
    "@angular/core": "~13.1.1",
    "@angular/forms": "~13.1.1",
    "@angular/platform-browser": "~13.1.1",
    "@angular/platform-browser-dynamic": "~13.1.1",
    "@angular/router": "~13.1.1",
    "@angular/service-worker": "~13.1.1",
    "@ionic-native/core": "^5.0.0",
    "@ionic-native/splash-screen": "^5.0.0",
    "@ionic-native/status-bar": "^5.0.0",
    "@ionic/angular": "^6.0.1",
    "compression": "^1.7.4",
    "core-js": "^3.20.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "helmet": "^3.21.2",
    "jsqr": "^1.4.0",
    "qrcode": "^1.4.4",
    "rxjs": "^6.6.2",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1301.2",
    "@angular-devkit/build-angular": "^13.1.2",
    "@angular-devkit/core": "~13.1.2",
    "@angular-devkit/schematics": "~13.1.2",
    "@angular/cli": "~13.1.2",
    "@angular/compiler": "~13.1.1",
    "@angular/compiler-cli": "~13.1.1",
    "@angular/language-service": "~13.1.1",
    "@ionic/angular-toolkit": "~2.0.0",
    "@schuchard/prettier": "^3.1.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.3",
    "@types/node": "^13.7.1",
    "codelyzer": "^6.0.0",
    "colors": "^1.4.0",
    "husky": "4.2.1",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "10.0.7",
    "prettier": "1.19.1",
    "protractor": "^7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "~4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  }
}
